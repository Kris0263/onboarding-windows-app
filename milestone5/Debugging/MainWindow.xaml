<Window x:Class="DebuggingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DebuggingExample"
        Title="DebuggingExample" Height="200" Width="400">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Message}" FontSize="16" Margin="0,0,0,10"/>
        <Button Content="Change Message" Width="150" Click="Button_Click"/>
    </StackPanel>
</Window>
